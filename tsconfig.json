{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@citizenfx",
      "./src/types"
    ],
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
